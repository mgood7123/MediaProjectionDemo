<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/rootView" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <ImageView android:id="@+id/SCREENSHOT" android:layout_width="match_parent" android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <Button android:id="@+id/startButton" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/start_recording" android:textSize="36sp" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <Button android:id="@+id/stopButton" android:layout_width="match_parent" android:layout_height="match_parent" android:text="@string/stop_recording" android:textSize="36sp" />
    </LinearLayout>
</LinearLayout>